# Cloud Database Configuration
# Choose your preferred provider and update the URL

# Supabase (Recommended - already integrated with your app)
SUPABASE_DATABASE_URL=postgresql+asyncpg://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT_REF].supabase.co:5432/postgres

# PlanetScale (MySQL)
PLANETSCALE_DATABASE_URL=mysql+aiomysql://[USERNAME]:[PASSWORD]@[HOST]/[DATABASE]?ssl-mode=REQUIRED

# Neon (PostgreSQL)
NEON_DATABASE_URL=postgresql+asyncpg://[USERNAME]:[PASSWORD]@[HOST]/[DATABASE]

# Railway (PostgreSQL)
RAILWAY_DATABASE_URL=postgresql+asyncpg://[USERNAME]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]

# Database Provider (supabase, planetscale, neon, railway, sqlite)
DATABASE_PROVIDER=supabase

# Gemini API Key (for AI functionality)
GEMINI_API_KEY=your_gemini_api_key_here



